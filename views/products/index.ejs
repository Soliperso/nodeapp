<%- include('../partials/header') %>

  <header></header>
  
  <div class="card-container">
    <% products.forEach(product => { %>
      <div class="card">
        <h1><%= product.name %></h1>
        <hr>
        <img src="<%= product.image %>" alt="<%= product.name %>">
        <p><%= product.description.substring(0, 195) %> ...</p>
        
        <hr>
        <div class="card-bottom">
          <a><p id="date"><em><%= moment(product.createdAt).fromNow() %></em>.</p></a>
          <a href="/products/<%= product._id %>">More Info</a>
        </div>
      </div>
    <% }) %>
  </div>

<%- include('../partials/footer') %>